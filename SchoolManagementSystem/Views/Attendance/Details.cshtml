@model SchoolManagementSystem.Models.AttendanceViewModel

<h2>Attendance Details</h2>

<div>
    <h4>Attendance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Student</dt>
        <dd class="col-sm-10">@Model.StudentName</dd>
        <dt class="col-sm-2">Subject</dt>
        <dd class="col-sm-10">@Model.SubjectName</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
        <dt class="col-sm-2">Presence</dt>
        <dd class="col-sm-10">@Model.Presence ? "Present" : "Absent"</dd>
        <dt class="col-sm-2">Remarks</dt>
        <dd class="col-sm-10">@Model.Remarks</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
