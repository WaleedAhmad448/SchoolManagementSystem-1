@{
    Layout = "_LayoutAccount";
}

@model SchoolManagementSystem.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "Change User";
}

<h2 class="form-account-title" style="text-align: center;">@ViewData["Title"]</h2> <!-- Título centralizado -->

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="ChangeUser" method="post" class="form-account-bg-form">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group form-account-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group form-account-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group form-account-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group form-account-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group form-account-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
