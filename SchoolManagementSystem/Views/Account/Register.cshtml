@{
    Layout = "_LayoutAccount";
}

@model SchoolManagementSystem.Models.RegisterNewUserViewModel
@{
    ViewData["Title"] = "Register";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<h2 class="form-account-title" style="text-align: center;">Register</h2> <!-- Título centralizado -->

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card p-4">
            <form method="post" class="form-account-bg-form">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group form-account-group">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-warning"></span>
                </div>

                <div class="form-group form-account-group">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-warning"></span>
                </div>

                <div class="form-group form-account-group">
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-warning"></span>
                </div>

                <div class="form-group form-account-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-warning"></span>
                </div>

                <div class="form-group form-account-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                </div>

                <div class="form-group form-account-group">
                    <label>Password</label>
                    <input asp-for="Password" type="password" class="form-control" value="@Model.TemporaryPassword" readonly />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>

                <div class="form-group form-account-group">
                    <label>Confirm Password</label>
                    <input asp-for="Confirm" type="password" class="form-control" value="@Model.TemporaryPassword" readonly />
                    <span asp-validation-for="Confirm" class="text-warning"></span>
                </div>

                <div class="form-group form-account-group">
                    <input type="submit" value="Register New User" class="btn btn-primary" />
                </div>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-4 text-center">
                        <p>@ViewBag.Message</p>
                    </div>
                }

                @if (ViewBag.Links != null)
                {
                    <div class="mt-3 text-center">
                        <h5>Create Related Entities:</h5>
                        @foreach (var link in ViewBag.Links)
                        {
                            <a href="@link.Value" class="btn btn-secondary mt-2">@link.Key</a>
                        }
                    </div>
                }
            </form>
        </div>
    </div>
</div>
