@{
    Layout = "_LayoutAccount";
}

@model SchoolManagementSystem.Models.ChangeFirstPasswordViewModel
@{
    ViewData["Title"] = "Change Your Password";
}


@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<h2 class="form-account-title" style="text-align: center;">@ViewData["Title"]</h2> 

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="ChangeFirstPassword" method="post" class="form-account-bg-form">
            <div asp-validation-summary="All"></div>

            <div class="form-group form-account-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="form-group form-account-group">
                <label asp-for="TemporaryPassword" class="control-label">Temporary Password</label>
                <input asp-for="TemporaryPassword" type="password" class="form-control" />
                <span asp-validation-for="TemporaryPassword" class="text-danger"></span>
            </div>

            <div class="form-group form-account-group">
                <label asp-for="NewPassword" class="control-label">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group form-account-group">
                <label asp-for="ConfirmNewPassword" class="control-label">Confirm New Password</label>
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <div class="form-group form-account-group">
                <input type="submit" value="Change Password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
