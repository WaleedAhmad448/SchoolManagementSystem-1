@model SchoolManagementSystem.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

<div class="form-group">
    <label>Name:</label>
    <p class="form-control-static">@Model.User.FullName</p>
</div>

<div class="form-group">
    <label>Department:</label>
    <p class="form-control-static">@Model.Department</p>
</div>

<div class="form-group">
    <label>Phone Number:</label>
    <p class="form-control-static">@Model.PhoneNumber</p>
</div>

<div class="form-group">
    <label>Hire Date:</label>
    <p class="form-control-static">@Model.HireDate.ToShortDateString()</p>
</div>

<div class="form-group">
    <img src="@Model.ImageFullPath" alt="Employee Image" class="img-thumbnail" style="max-width: 150px;" />
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
