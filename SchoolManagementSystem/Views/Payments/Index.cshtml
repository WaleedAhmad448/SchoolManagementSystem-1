@model IEnumerable<SchoolManagementSystem.Data.Entities.Payment>
@{
    ViewData["Title"] = "Payments";
}

<h2>Payments List</h2>
<p><a asp-action="Create" class="btn btn-primary">Record New Payment</a></p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Student)</th>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
            <th>@Html.DisplayNameFor(model => model.PaymentDate)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => payment.Student)</td>
                <td>@Html.DisplayFor(modelItem => payment.Amount)</td>
                <td>@Html.DisplayFor(modelItem => payment.PaymentDate)</td>
                <td>@Html.DisplayFor(modelItem => payment.Status)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@payment.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@payment.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>