@{
    Layout = "_Dashboard";
    ViewBag.PageTitle = "SchoolClasses";
    ViewBag.SubPageTitle = "Details";
}

@model SchoolManagementSystem.Models.SchoolClassViewModel

@{
    ViewData["Title"] = "Details of School Class";
}

<h2>Details of School Class</h2>

<div class="card">
    <div class="card-body">
        <h4>School Class</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2" data-toggle="tooltip" title="The name of the school class">Class Name:</dt>
            <dd class="col-sm-10">@Model.ClassName</dd>

            <dt class="col-sm-2" data-toggle="tooltip" title="The date when the class starts">Start Date:</dt>
            <dd class="col-sm-10">@Model.StartDate?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-2" data-toggle="tooltip" title="The date when the class ends">End Date:</dt>
            <dd class="col-sm-10">@Model.EndDate?.ToString("dd/MM/yyyy")</dd>
        </dl>

        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
