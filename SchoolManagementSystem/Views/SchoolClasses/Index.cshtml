@model IEnumerable<SchoolManagementSystem.Models.SchoolClassViewModel>

@{
    ViewData["Title"] = "School Classes";
}

<h2>School Classes</h2>

<div>
    <a asp-action="Create" class="btn btn-success mb-3">Create New Class</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No classes found.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Class Name</th>
                <th>Course</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schoolClass in Model)
            {
                <tr>
                    <td>@schoolClass.ClassName</td>
                    <td>@schoolClass.CourseId</td> <!-- Ideally, you might want to show the Course Name instead -->
                    <td>@schoolClass.StartDate.ToString("d")</td>
                    <td>@schoolClass.EndDate.ToString("d")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@schoolClass.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@schoolClass.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
