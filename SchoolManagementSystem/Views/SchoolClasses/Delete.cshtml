@model SchoolManagementSystem.Models.SchoolClassViewModel

@{
    ViewData["Title"] = "Delete School Class";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete School Class</h2>

    <h3>Are you sure you want to delete this school class?</h3>

    <div class="card mb-3 shadow">
        <div class="card-body">
            <h5 class="card-title">@Model.ClassName</h5>
            <div class="form-group mb-2">
                <label>Associated Course:</label>
                <p class="mb-0">@Model.CourseId</p>
            </div>
            <div class="form-group mb-2">
                <label>Start Date:</label>
                <p class="mb-0">@Model.StartDate.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="form-group mb-2">
                <label>End Date:</label>
                <p class="mb-0">@Model.EndDate.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    </div>

    <form id="deleteForm" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="button" class="btn btn-danger" id="confirmDelete">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
    </form>
</div>

@section Scripts {
    <script src="~/js/formHelpers.js"></script>
    <script>
        setupSweetAlertOnDelete("confirmDelete", "deleteForm", "You won't be able to revert this!");
    </script>
}
