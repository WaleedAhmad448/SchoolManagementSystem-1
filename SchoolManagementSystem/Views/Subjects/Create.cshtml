@model SchoolManagementSystem.Models.SubjectViewModel

@{
    ViewData["Title"] = "Create Subject";
}

<h2>Create Subject</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form id="createSubjectForm" asp-action="Create" method="post">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="SubjectName" class="form-label">Subject Name <span class="text-danger">*</span></label>
            <input asp-for="SubjectName" class="form-control" required />
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Credits" class="form-label">Credits <span class="text-danger">*</span></label>
            <input asp-for="Credits" type="number" class="form-control" required />
            <span asp-validation-for="Credits" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Subject</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/formHelpers.js"></script>

    <script>
        // SweetAlert2 confirmation before submitting the form
        setupSweetAlertOnSubmit("createSubjectForm", "Subject created successfully.");
    </script>
}
