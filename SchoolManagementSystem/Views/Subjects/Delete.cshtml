@{
    Layout = "_Dashboard";
    ViewBag.PageTitle = "Subjects";
    ViewBag.SubPageTitle = "Delete";
}

@model SchoolManagementSystem.Models.SubjectViewModel

@{
    ViewData["Title"] = "Delete Subject";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Subject</h2>

    <h3>Are you sure you want to delete this subject?</h3>
    <div class="card mb-3 shadow">
        <div class="card-body">
            <h5>@Model.SubjectName</h5>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Credits:</strong> @Model.Credits</p>
        </div>
    </div>

    <form id="deleteForm" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <button type="button" class="btn btn-danger" id="confirmDelete">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/formHelpers.js"></script>
    <script>
        setupSweetAlertOnDelete("confirmDelete", "deleteForm", "You won't be able to revert this!");
    </script>
}
