@model SchoolManagementSystem.Data.Entities.Subject

@{
    ViewData["Title"] = "Subject Details";
}

<h2>@Model.SubjectName</h2>
<p><strong>Teacher:</strong> @Model.Teacher</p>
<p><strong>Course:</strong> @Model.Course</p>
<p><strong>Start Time:</strong> @Model.StartTime</p>
<p><strong>End Time:</strong> @Model.EndTime</p>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
</p>