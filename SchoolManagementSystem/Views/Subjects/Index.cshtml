@model IEnumerable<SchoolManagementSystem.Data.Entities.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<h2>Subjects List</h2>
<p><a asp-action="Create" class="btn btn-primary">Add New Subject</a></p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().SubjectName)</th>
            <th>@Html.DisplayNameFor(model => model.Teacher)</th>
            <th>@Html.DisplayNameFor(model => model.StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.EndTime)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => subject.SubjectName)</td>
                <td>@Html.DisplayFor(modelItem => subject.Teacher)</td>
                <td>@Html.DisplayFor(modelItem => subject.StartTime)</td>
                <td>@Html.DisplayFor(modelItem => subject.EndTime)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@subject.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@subject.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
