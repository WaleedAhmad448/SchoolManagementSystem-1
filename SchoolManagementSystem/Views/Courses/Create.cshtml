@model SchoolManagementSystem.Models.CourseViewModel

@{
    ViewData["Title"] = "Create Course";
}

<h2>Create Course</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="CourseName" class="form-label">Course Name</label>
            <input asp-for="CourseName" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Duration" class="form-label">Duration (weeks)</label>
            <input asp-for="Duration" type="number" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Credits" class="form-label">Credits</label>
            <input asp-for="Credits" type="number" class="form-control" />
            <span asp-validation-for="Credits" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="IsActive" class="form-label">Active</label>
            <select asp-for="IsActive" class="form-select">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="SchoolClassIds" class="form-label">Select School Classes</label>
        <select asp-for="SchoolClassIds" class="form-select" multiple="multiple">
            @foreach (var classItem in Model.AvailableSchoolClasses)
            {
                <option value="@classItem.Value">@classItem.Text</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="SubjectIds" class="form-label">Select Subjects</label>
        <select asp-for="SubjectIds" class="form-select" multiple="multiple">
            @foreach (var subjectItem in Model.AvailableSubjects)
            {
                <option value="@subjectItem.Value">@subjectItem.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create Course</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
