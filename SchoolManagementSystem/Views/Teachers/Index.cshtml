@model IEnumerable<TeacherViewModel>
@{
    ViewData["Title"] = "Teachers";
}

<h2>Teachers List</h2>
<p><a asp-action="Create" class="btn btn-primary">Add New Teacher</a></p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
            <th>@Html.DisplayNameFor(model => model.HireDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => teacher.Name)</td>
                <td>@Html.DisplayFor(modelItem => teacher.Department)</td>
                <td>@Html.DisplayFor(modelItem => teacher.HireDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>