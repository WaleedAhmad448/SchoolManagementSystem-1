@{
    Layout = "_Dashboard";
    ViewBag.PageTitle = "Grade";
    ViewBag.SubPageTitle = "DeleteGrade";
}

@model SchoolManagementSystem.Models.GradeViewModel

<h2>Delete Grade</h2>

<h3>Are you sure you want to delete this grade?</h3>
<div>
    <h4>Subject: @Model.SubjectName</h4>
    <p>Grade: @Model.Value</p>
</div>

<form asp-action="DeleteGrade" method="post">
    <!-- Hidden field for the grade ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Hidden fields for the student and subject IDs -->
    <input type="hidden" asp-for="StudentId" />
    <input type="hidden" asp-for="SubjectId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-studentId="@Model.StudentId" class="btn btn-secondary">Cancel</a>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
